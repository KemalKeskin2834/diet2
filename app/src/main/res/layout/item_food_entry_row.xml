<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_glass_card"
    android:padding="14dp">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilFoodName"
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/food_entry_food_name_hint"
        app:boxStrokeColor="#66FFFFFF"
        app:hintTextColor="#E6FFFFFF"
        app:layout_constraintEnd_toStartOf="@id/btnDetails"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/inputFoodName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:textColor="#FFFFFFFF" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.iconbutton.MaterialIconButton
        android:id="@+id/btnDetails"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:contentDescription="@string/food_entry_details_title"
        app:icon="@drawable/ic_info_24"
        app:iconTint="#E6FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tilFoodName" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilAmount"
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/food_entry_amount_hint"
        app:boxStrokeColor="#66FFFFFF"
        app:hintTextColor="#E6FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tilFoodName"
        app:layout_constraintWidth_percent="0.32"
        android:layout_marginTop="12dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/inputAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:textColor="#FFFFFFFF" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilWeightType"
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/food_entry_weight_type_hint"
        app:boxStrokeColor="#66FFFFFF"
        app:hintTextColor="#E6FFFFFF"
        app:layout_constraintStart_toEndOf="@id/tilAmount"
        app:layout_constraintEnd_toStartOf="@id/tilCookingMethod"
        app:layout_constraintTop_toTopOf="@id/tilAmount"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp">

        <com.google.android.material.textfield.MaterialAutoCompleteTextView
            android:id="@+id/inputWeightType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none"
            android:textColor="#FFFFFFFF" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilCookingMethod"
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/food_entry_cooking_method_hint"
        app:boxStrokeColor="#66FFFFFF"
        app:hintTextColor="#E6FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tilAmount"
        app:layout_constraintWidth_percent="0.32">

        <com.google.android.material.textfield.MaterialAutoCompleteTextView
            android:id="@+id/inputCookingMethod"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none"
            android:textColor="#FFFFFFFF" />

    </com.google.android.material.textfield.TextInputLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
